let p: &'p ();

block START {
    p = &'foo;
    goto B C;
}

block B {
    use(p);
    ;
    p = &'bar;
    goto C;
}

block C {
    use(p);
}

assert B/1 not in 'foo;
assert C/0 in 'foo;
assert C/0 in 'bar;
assert C/1 not in 'foo;
assert C/1 not in 'bar;

assert p not live at START;
assert p live at B;
assert p live at C;